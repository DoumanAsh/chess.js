include ./head.pug

script(src="/js/def.js")
script(src="/js/main.js")

body
    div(id="chess_board", class="chess_board")
        - for (var i = 8; i > 0; i--)
            if i % 2
                - var cell = "black"
            else
                - var cell = "white"
            each col in ["a", "b", "c", "d", "e", "f", "g", "h"]
                div(id=col+i, class=cell)= col+i
                if cell === "white"
                    - cell = "black"
                else
                    - cell = "white"

    table(id="menu")
        tr
            th
                p(class="menu_text")= "View side"
            th
                p(class="menu_text")= "Pawn promotion"
            th
                p(class="menu_text")= "Team"
            th
                p(class="menu_text")= "Turn"
        tr
            td
                select(style="width: 100%", onchange="reverse_board()")
                    option= "White"
                    option= "Black"
            td
                select(style="width: 100%")
                    option= "Queen"
                    option= "Rook"
                    option= "Bishop"
                    option= "Knight"
            td
                div(class="menux_box")= "WHITE"
            td
                div(class="menux_box")= "WHITE"
    script.
        chess_init()
